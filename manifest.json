{
  "manifest_version": 3,
  "name": "Watch Later Quick Delete for Youtube",
  "description": "Adds a button to quickly delete videos from your Watch Later playlist.",
  "icons": {
    "128": "assets/logo-128.png"
  },
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/playlist?list=WL",
        "https://www.youtube.com/playlist?list=WL*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
